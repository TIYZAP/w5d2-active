<%= link_to "Create a new item", new_path %>
<table class="table table-inverse">

    <thead>
        <tr>
            <% @colums.each do |colum| %>
            <th>
                <%= colum.upcase %>
            </th>
            <%end%>
        </tr>

    </thead>
    <tbody>
        <% @items.each do |item| %>
        <tr>
            <% item.attributes.each do |k,v| %>
            <% if k == 'price' %>

            <td>
                <%= number_to_currency(item.price.to_i/100.00) %>
            </td>
            <%else%>
            <td>
                <%= v %>
            </td>
            <%end%>
            <%end%>
            <td>
              <%= link_to "Edit this item", edit_item_path(:id => item.id) %>
            </td>
        </tr>
        <%end%>
    </tbody>
</table>
